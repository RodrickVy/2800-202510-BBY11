  <%- include('templates/header',{css:["css/index.css","/css/careers.css"]}) %>
  <body>
    <!-- Header Section -->
    <div class="career-detail-header text-center">
      <div class="container">
        <h1 class="display-4 fw-bold"><%= career.title %></h1>
        <p class="lead text-white mb-4"><%= career.summary %></p>
        <a href="/careers" class="btn btn-back">
          <i class="bi bi-arrow-left"></i> Back to Careers
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
      <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
          <!-- About Card -->
          <div class="detail-card">
            <div class="detail-card-body">
              <h2 class="section-title">About This Career</h2>
              <p class="fs-5"><%= career.description %></p>
            </div>
          </div>

          <!-- Responsibilities Card -->
          <div class="detail-card">
            <div class="detail-card-body">
              <h2 class="section-title">Key Responsibilities</h2>
              <ul class="responsibilities-list fs-5">
                <% career.tasks.forEach(task => { %>
                <li><%= task %></li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
          <!-- Skills Card -->
          <div class="detail-card" style="top: 20px">
            <div class="detail-card-body">
              <h2 class="section-title">Skills You'll Need</h2>
              <div class="d-flex flex-wrap">
                <% career.skills.forEach(skill => { %>
                <span class="skill-badge mb-2">
                  <i class="bi bi-check-circle me-1"></i><%= skill %>
                </span>
                <% }); %>
              </div>
            </div>
          </div>

          <div class="detail-card">
            <div class="detail-card-body">
              <h2 class="section-title">Recommended Alumni</h2>

              <% if (alumni && alumni.length) { %>
              <ul class="list-group">
                <% alumni.forEach(person => { %>
                <a
                  href="/connect/<%= person.username %>"
                  class="text-decoration-none user-anchor"
                >
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center"
                  >
                    <div class="d-flex align-items-center">
                      <!-- Profile image -->
                      <img
                        src="/<%= person.image %>"
                        alt="Photo of <%= person.name %>"
                        class="rounded-circle alumni-avatar me-3"
                      />
                      <span><%= person.name %></span>
                    </div>
                    <span class="badge bg-primary rounded-pill">
                      <%= person.score %> skill<%= person.score === 1 ? '' : 's'
                      %>
                    </span>
                  </li>
                </a>
                <% }) %>
              </ul>
              <% } else { %>
              <p class="text-muted">No alumni match these skills yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  <%- include('templates/footer', {currentPage:'careers'}) %>
</html>
