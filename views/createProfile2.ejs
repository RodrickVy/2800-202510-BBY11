<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Create Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="/css/createProfile.css"> -->
  <style>
    .profile-image {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 50%;
      cursor: pointer;
      display: block;
      margin: 0 auto 1rem auto;
      border: 2px solid #001f3f;
    }

    #imageInput {
      display: none;
    }
  </style>
</head>

<body class="bg-light d-flex justify-content-center align-items-center" style="min-height: 100vh;">

  <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <label for="imageInput">
        <img src="https://via.placeholder.com/100" class="profile-image" id="previewImage" alt="upload Image">
      </label>
      <input type="file" id="imageInput" name="image" accept="image/*" onchange="previewImage(event)">
    </div>

    <h2 class="text-center mb-3">Create Profile</h2>

    <h2>Work Experience</h2>
    <input placeholder="Company" type="text" id="company" name="company" class="form-control mb-3">
    <input placeholder="Role" type="text" id="role" name="role" class="form-control mb-3">
    <input placeholder="Years" type="text" id="years" name="years" class="form-control mb-3">
    <input placeholder="Description" type="text" id="description" name="description" class="form-control mb-3">

    <h2>Interests</h2>
    <input placeholder="Fields of interest" type="text" id="interest" name="interest" class="form-control mb-3">
    <input placeholder="Skills" type="text" id="skills" name="skills" class="form-control mb-3">
    <input placeholder="Social Media" type="text" id="social" name="social" class="form-control mb-3">

    <button type="submit" class="btn btn-primary w-100" id="formbtn">Skip</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function previewImage(event) {
      const reader = new FileReader();
      reader.onload = function () {
        document.getElementById('previewImage').src = reader.result;
      }
      reader.readAsDataURL(event.target.files[0]);
    }
  </script>
</body>
<%- include('templates/footer', {currentPage:'account'}) %>
</html>