<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/header',{css:[]}) %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meetings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container py-5">
    <h2 class="mb-4">Your Meetings</h2>


    <div  >
        <a  class="btn"  href="/connect/meetings/outgoing">

            <p     class="nav-link" >Outgoing Requests</p>
        </a>
        <a class="btn"  href="/connect/meetings/incoming">

            <p   class="nav-link" >Incoming Requests</p>
        </a>

        <a  class="btn"  style="border-bottom: 0.5rem solid #007bff;  "  href="/connect/meetings/scheduled">

            <p    class="nav-link"  >Scheduled Meetings</p>
        </a>
    </div>
    <br><hr><br>
    <div >

        <!-- Scheduled -->
        <div >
            <% if (meetings.length > 0) { %>
                <% meetings.forEach(m => { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <span class="badge bg-success">Scheduled</span>
                            <br><br>
                            <a href="connect/<%= m.otherParty.username %>" style="text-decoration: none">
                                <div class="d-flex align-items-center gap-3 p-2 border rounded shadow-sm bg-light" style="max-width: 400px;">
                                    <img src="/<%= m.otherParty.image || '/default-profile.png' %>" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                    <div class="text-truncate">
                                        <div class="fw-semibold text-dark mb-0"><%= m.otherParty.name %> <%= m.otherParty.lastname %></div>
                                        <small class="text-muted"><%= m.otherParty.user_type || 'No role listed' %></small>
                                    </div>
                                </div>
                            </a>
                            <p class="p-2"> <strong><%= m.duration %> mins</strong> on <%= m.day %> @ <strong><%= m.startTime %></strong> </p>

                            <p class="pl-2">
                                Meeting <strong><%= m.meetingType %></strong>
                                <% if (m.meetingType === 'virtual') { %>
                                    - <a href="<%= m.location %>" target="_blank" class="ms-2 text-decoration-underline">
                                        Join Link
                                    </a>
                                <% } else if (m.meetingType === 'inperson') { %>
                                    - <span class="badge bg-info text-dark ms-2"><%= m.location %></span>
                                <% } %>
                            </p>

                            <p class="pl-2"><%= m.notes %></p>

                            <a href="/connect/meetings/cancel?client=<%= m.client %>&target=<%= m.targetId %>&startTime=<%= m.startTime %>" class="btn btn-outline-danger btn-sm">Cancel Meeting</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-muted text-center">No accepted meetings scheduled.</p>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<br>
<%- include('templates/footer', {currentPage:'home'}) %>
