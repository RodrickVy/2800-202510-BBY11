<!-- views/scheduleMeeting.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Schedule Meeting</title>
    <link rel="stylesheet" href="/styles/calendar.css">
    <script src="/scripts/scheduleCalendar.js" defer></script>
</head>
<body>
<div class="container">
    <div class="profile-header">
        <img src="<%= user.profileImage %>" alt="Profile" class="avatar">
        <h3><%= user.name %></h3>
        <p><%= user.bio %></p>
    </div>

    <h2>Available Time Slots</h2>
    <div id="calendar" data-availability='<%= JSON.stringify(availability) %>'></div>

    <div class="meeting-form">
        <label for="selectedTime">Selected Time:</label>
        <input type="text" id="selectedTime" readonly>

        <label for="notes">Meeting Notes:</label>
        <textarea id="notes" rows="4"></textarea>

        <button id="scheduleBtn">Schedule Meeting</button>
    </div>
</div>
</body>
</html>
